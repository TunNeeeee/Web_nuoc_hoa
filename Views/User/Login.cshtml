@model Web_final.ViewModels.UserViewModel
<div class="panel panel-primary">
    <div class="panel-heading panel-heading-prod"><i class="fa fa-spinner fa-spin"></i> Đăng nhập </div>
    <div class="panel-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        <form class="form form-horizontal" asp-action="Login" asp-controller="User"
              method="POST">
            <div class="form-group">
                <label asp-for="Register.Username" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Register.Username" placeholder="Nhập tên đăng nhập" autofocus required />
                    <span asp-validation-for="Register.Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Register.Password" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input type="password" class="form-control" asp-for="Register.Password" id="password" placeholder="Nhập mật khẩu" required />
                    <span asp-validation-for="Register.Password" class="text-danger"></span>
                </div>
            </div>
            <p>Nếu bạn chưa có tài khoản hãy nhấp vào <a href="dang-ky"><u>Đăng ký</u></a></p>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn login" style="background-color: #f5ddb6">Đăng nhập</button>
                </div>
            </div>
        </form>
    </div>
</div>