@model Web_final.ViewModels.HomeViewModel
<div class="product_section layout_padding">
    <div class="container">

        <div class="product_section_2 layout_padding">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="product_taital">NƯỚC HOA NAM</h1>
                    <p class="product_text">incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation</p>
                </div>
                <div class="row">
                    @foreach (var item in Model.ManProds)
                    {

                        <div class="col-lg-3 col-sm-6">
                            <div class="product_box" style="text-align: center">
                                <img src="~/images/product/@item.Img1" class="img1"
                                     alt="@item.NamePro">
