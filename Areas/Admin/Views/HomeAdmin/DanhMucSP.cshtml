@model IEnumerable<Web_final.Models.Product>

@{
    ViewData["Title"] = "DanhMucSP";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-5">
        <h2>QUẢN LÝ SẢN PHẨM</h2>
    </div>
</div>

<p>
    <a asp-action="addprod" class="btn btn-b">Thêm mới sản phẩm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h6>Tên sản phẩm</h6>
            </th>
            <th>
                <h6>SL kho</h6>
            </th>
            <th>
                <h6>Giá</h6>
            </th>
            <th>
                <h6>Mô tả</h6>
            </th>
            <th>
                <h6>Hình Ảnh</h6>
            </th>
            <th>
                <h6>Hiển thị</h6>
            </th>
            <th>
                <h6>Đơn ĐH</h6>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nums)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    <img src="~/images/product/@item.Img1" class="img1" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hide)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order)
                </td>
                <td>
                    <a asp-action="UpdateProd" asp-route-id="@item.IdPro" class="btn btn-b">Chỉnh sửa</a>
                    <a asp-action="displayprod" asp-route-id="@item.IdPro" class="btn btn-b">Chi tiết</a>
                    <a asp-action="deleteprod" asp-route-id="@item.IdPro" class="btn btn-b">  Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
